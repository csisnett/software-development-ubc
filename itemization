#reader(lib "htdp-beginner-reader.ss" "lang")((modname itemization) (read-case-sensitive #t) (teachpacks ()) (htdp-settings #(#t constructor repeating-decimal #f #t none #f () #f)))
;; data definition:
;; CountDown is one of:
;; - false
;; - Natural [1,10]
;; - true

; false means countdown hasn't started. Natural[1,10] means countdown is running and seconds left
; and true means countdown is over.

(define CD1 false)
(define CD2 10); just started running
(define CD3 3) ; almost over
(define CD4 true) ; complete

